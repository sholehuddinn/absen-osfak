generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nim   String @unique
  name  String
  role  Role   @default(PARTICIPANT)
  prodi String @default("")

  participants   Absence[]        @relation("PicParticipants")
  absences       Absence[]        @relation("ParticipantAbsence")
  Tim            Tim[]
  TimParticipant TimParticipant[]
}

model Absence {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  picId Int
  pic   User @relation("PicParticipants", fields: [picId], references: [id])

  participantId Int
  participant   User @relation("ParticipantAbsence", fields: [participantId], references: [id])
}

enum Role {
  PIC
  PARTICIPANT
}

model Tim {
  id   Int    @id @default(autoincrement())
  name String

  picId Int
  pic   User @relation(fields: [picId], references: [id])

  participants TimParticipant[]
}

model TimParticipant {
  id     Int @id @default(autoincrement())
  timId  Int
  userId Int

  tim  Tim  @relation(fields: [timId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([timId, userId])
}
